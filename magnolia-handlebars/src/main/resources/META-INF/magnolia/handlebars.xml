<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>handlebars</name>
    <displayName>Magnolia Handlebars</displayName>
    <description>Handlebars integration for Magnolia</description>
    <class>com.magnoliales.handlebars.setup.HandlebarsModule</class>
    <versionHandler>com.magnoliales.handlebars.setup.HandlebarsVersionHandler</versionHandler>
    <version>1.0.0</version>
    <components>
        <id>main</id>
        <component>
            <type>com.magnoliales.handlebars.setup.registry.HandlebarsRegistry</type>
            <implementation>com.magnoliales.handlebars.setup.registry.HandlebarsRegistryImpl</implementation>
            <scope>singleton</scope>
        </component>
        <component>
            <type>com.magnoliales.handlebars.mapper.NodeObjectMapper</type>
            <implementation>com.magnoliales.handlebars.mapper.NodeObjectMapperImpl</implementation>
        </component>
        <component>
            <type>com.magnoliales.handlebars.ui.dialogs.AnnotatedDialogDefinitionFactory</type>
            <implementation>com.magnoliales.handlebars.ui.dialogs.AnnotatedDialogDefinitionFactoryImpl</implementation>
            <scope>singleton</scope>
        </component>
        <component>
            <type>javax.el.ExpressionFactory</type>
            <implementation>de.odysseus.el.ExpressionFactoryImpl</implementation>
            <scope>singleton</scope>
        </component>
    </components>
    <dependencies>
        <dependency>
            <name>pages</name>
        </dependency>
    </dependencies>
</module>